<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vreugdenhil_prototype_7.Login">
  <ContentPage.BackgroundColor>White</ContentPage.BackgroundColor>
  <ContentPage.Padding>20,20,20,20</ContentPage.Padding>
  <ScrollView>
    <StackLayout>
      <StackLayout Orientation="Vertical" VerticalOptions="Start">
        <!-- top controls -->
        <Image Source="icon.png" Margin="0,20,0,10" />
        <Label HorizontalTextAlignment="Center" Scale="1.5">Inloggen</Label>
      </StackLayout>

      <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
        <!-- bottom controls -->
        <Entry Placeholder="Email"/>
        <Entry Placeholder="Wachtwoord"/>
        <Button Text="Inloggen" BackgroundColor="#215cba" TextColor="White" HeightRequest="75"/>
        <Button Text="Wachtwoord vergeten" BackgroundColor="Transparent" TextColor="Black" HeightRequest="75"/>
        <Button x:Name="Register" Text="Registeren" BackgroundColor="Transparent" TextColor="Black" HeightRequest="75" Clicked="OnRegister"/>
      </StackLayout>
    </StackLayout>
  </ScrollView>
</ContentPage>