<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vreugdenhil_prototype_7.Login">
  <ContentPage.BackgroundColor>White</ContentPage.BackgroundColor>
  <ScrollView Style="{StaticResource LayoutStyle1}">
    <StackLayout>
      <StackLayout Orientation="Vertical" VerticalOptions="Start">
        <Image Source="icon.png"/>
        <Label Style="{StaticResource LabelStyle1}">Inloggen</Label>
      </StackLayout>

      <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
        <!-- bottom controls -->
        <Entry Placeholder="Email"/>
        <Entry Placeholder="Wachtwoord"/>
        <Button Style="{StaticResource ButtonStyle1}" Text="Inloggen" />
        <Button Style="{StaticResource ButtonStyle2}" Text="Wachtwoord vergeten"/>
        <Button Style="{StaticResource ButtonStyle2}" x:Name="Register" Text="Registreren" Clicked="OnRegister"/>
      </StackLayout>
    </StackLayout>
  </ScrollView>
</ContentPage>