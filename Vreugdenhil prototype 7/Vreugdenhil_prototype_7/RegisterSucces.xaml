<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vreugdenhil_prototype_7.RegisterSucces">
  <ScrollView>
    <StackLayout>
      <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
        <!-- top controls -->
        <Image Source="icon.png" />
        <Label Style="{StaticResource LabelStyle2}">U bent aangemeld!</Label>
        <Label Style="{StaticResource LabelStyle1}">U kunt uw inloggegevens binnenkort in uw inbox verwachten</Label>
      </StackLayout>

      <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
        <!-- bottom controls -->
        <Button Style="{StaticResource ButtonStyle2}" x:Name="ToLogin" Text="Terug naar inloggen" Clicked="ToLogin_OnClicked"/>
      </StackLayout>
    </StackLayout>
  </ScrollView>
</ContentPage>