<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vreugdenhil_prototype_7.Register">
  <ScrollView Style="{StaticResource LayoutStyle1}">
    <StackLayout>
      <StackLayout Orientation="Vertical" VerticalOptions="Start">
        <!-- top controls -->
        <Image Source="icon.png" />
        <Label Style="{StaticResource LabelStyle1}">Vul uw gegevens in om een account aan te maken</Label>
      </StackLayout>

      <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
        <!-- bottom controls -->
        <Entry Placeholder="Naam"/>
        <Entry Placeholder="Bedrijf"/>
        <Entry Placeholder="Email"/>
        <Button Style="{StaticResource ButtonStyle2}" x:Name="RegisterButton" Text="Registeren" Clicked="RegisterButton_OnClicked"/>
      </StackLayout>
    </StackLayout>
  </ScrollView>
</ContentPage>